{
    "description": "this is a script that use iconv to convert files' encoding",
    "name": "file-encoder",
    "usage": "file-encoder -f ${filename} -d ${directory} -r -e ${encoding}",
    "version": "0.0.20150923",
    "main":"encoder.js",
    "author": "leungwensen <leungwensen@gmail.com>",
    "homepage": "https://github.com/leungwensen/file-encoder",
    "files": [
        "package.json",
        "encoder.js",
        "utils.js"
    ],
    "keywords": [
        "file-encoder",
        "iconv",
        "ICU",
        "encoder",
        "encoding"
    ],
    "bin": {
        "file-encoder": "./encoder.js"
    },
    "dependencies": {
        "iconv-lite": "*",
        "minimist": "*",
        "node-icu-charset-detector": "*",
        "pastry": "*"
    },
    "devDependencies": {
        "grunt": "^0.4.5",
        "grunt-contrib-watch": "*"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/leungwensen/file-encoder.git"
    },
    "scripts": {
        "preinstall": "brew install iconv && brew install icu4c && brew link icu4c --force"
    }
}
